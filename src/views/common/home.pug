extend ./include/layout.pug

block vars
  - var title = 'Home';
  - var background = 'background-color: #444; background-image: url('+urlPref+'img/pixabay_com_crowd.png);';

block scriptBeforeBody
  if webApp
    //- Here if webApp
    script(src='/js/common/removeFacebookAppendedHash.js')


block content

  div(
    ng-controller=mobileApp?'ControllerHomeMobile':false
    )

    if mobileApp
      include ./include/nav-mobile.pug

    .row
      .well
        h1 Dynamic Web Application Projects
        p
          | Here are several applications according to FreeCodeCamp.com
          | tasks, within one Heroku application.
        p(style='font-size:11px;') Server side on Node.js platform using
          |  Express.js. References Google Places API, MongoDB
          |  on mlab.com through Mongoose.

    .row
      .col-sm-6.col-md-4: .thumbnail: .caption: .myhome-thumbnail
        h3
          | Voting App
          | &nbsp;
          a.btn.btn-primary(href=urlPrefix+'/app1/polls') Go
        p Accessible via menu 'Voting'.
        p(style='font-size:11px;') Written using: Angular 1.5, Bootstrap, Chart.js.
          |  Server keeps data in MongoDB.
        p Following user stories:
          a(href='https://freecodecamp.com/challenges/basejump-build-a-voting-app'
            target='_blank'
          )  fcc user stories.

      .col-sm-6.col-md-4: .thumbnail: .caption: .myhome-thumbnail
        h3
          | Nightlife Coordination App
          | &nbsp;
          a.btn.btn-primary(href=urlPrefix+'/app2/cafes') Go
        p Accessible via menu 'Nightlife'.
        p(style='font-size:11px;') Written using: Angular 1.5, Bootstrap,
          |  Google Places API (on server side), Google Maps API
          |  (Leaflet.js with online/offline map used in mobile app).
        p Following user stories:
          a(href='https://www.freecodecamp.com/challenges/build-a-nightlife-coordination-app'
            target='_blank'
          )  fcc user stories

      .col-sm-6.col-md-4: .thumbnail: .caption: .myhome-thumbnail
        h3
          | Chart the Stock Market
          | &nbsp;
          a.btn.btn-primary(href=urlPrefix+'/app3') Go
        p Accessible via menu 'Stock'.
        p(style='font-size:11px;') Written using: Angular 1.5, Bootstrap, WebSocket, D3.
        p Following user stories:
          a(href='https://www.freecodecamp.com/challenges/chart-the-stock-market'
            target='_blank'
          )  fcc user stories

      .col-sm-6.col-md-4: .thumbnail: .caption: .myhome-thumbnail
        h3
          | Book Trading Club
          | &nbsp;
          a.btn.btn-primary(href=urlPrefix+'/app4/books') Go
        p Accessible via menu 'Books'.
        p(style='font-size:11px;') Written using: Angular 1.5, Bootstrap, WebSocket.
        p Following user stories:
          a(href='https://www.freecodecamp.com/challenges/manage-a-book-trading-club'
            target='_blank'
          )  fcc user stories

      .col-sm-6.col-md-4: .thumbnail: .caption: .myhome-thumbnail
        h3
          | Pinterest Clone
          | &nbsp;
          a.btn.btn-primary(href=urlPrefix+'/app5') Go
        p Accessible via menu 'Pinter'.
        p Following user stories:
          a(href='https://www.freecodecamp.com/challenges/build-a-pinterest-clone'
            target='_blank'
          )  fcc user stories


    if webApp
      .row
        .well
          h3
            img(src='img/logo.png' width='25px')
            | Android Application Available
          p You can download Android application with same functionality here.
          p(style='font-size:11px;') Written using Apache Cordova platform,
           |  Angular 1.5, Bootstrap.
           |  Using same JavaScript source and pug templates shared by both web
           |  and mobile application. Hence also using: WebSocket,
           |  D3, Chart.js, Leaflet.js with online/offline map.
           |  Mobile application references same server REST API/Websocket API
           |  that uses web application.
          p
            a.btn.btn-primary(
              href=urlPrefix+'/bin/ikarus512-fcc1apps.apk'
              type='application/vnd.android.package-archive'
              target='_blank'
              download
              )
              | Download (9MB)
          div(style='white-space:nowrap;overflow-y:hidden;')
            div(style='height:300px;')
              img(src='img/fcc1apps-screenshots/01.png' height='100%')
              img(src='img/fcc1apps-screenshots/02.png' height='100%')
              img(src='img/fcc1apps-screenshots/03.png' height='100%')
              img(src='img/fcc1apps-screenshots/04.png' height='100%')
              img(src='img/fcc1apps-screenshots/05.png' height='100%')
              img(src='img/fcc1apps-screenshots/06.png' height='100%')
              img(src='img/fcc1apps-screenshots/07.png' height='100%')
              img(src='img/fcc1apps-screenshots/08.png' height='100%')
              img(src='img/fcc1apps-screenshots/09.png' height='100%')

    if webApp
      .row
        //- ----------------------------------------------------
        //- --  share buttons
        //- ----------------------------------------------------
        if(shareit.facebook||shareit.twitter||shareit.odnoklassniki||shareit.vk)
          .well
            label Share with:
            | &nbsp;
            if(shareit.facebook)
              a.btn.btn-primary.btn-xs(
                href=shareit.facebook
                target='_blank'
                title='Facebook'
                aria-label='Facebook'
              ): .fa.fa-2x.fa-facebook(aria-hidden='true')
              | &nbsp;
            if(shareit.twitter)
              a.btn.btn-primary.btn-xs(
                href=shareit.twitter
                target='_blank'
                title='Twitter'
                aria-label='Twitter'
              ): .fa.fa-2x.fa-twitter(aria-hidden='true')
              | &nbsp;
            if(shareit.odnoklassniki)
              a.btn.btn-primary.btn-xs(
                href=shareit.odnoklassniki
                target='_blank'
                title='Odnoklassniki'
                aria-label='Odnoklassniki'
              ): .fa.fa-2x.fa-odnoklassniki(aria-hidden='true')
              | &nbsp;
            if(shareit.vk)
              a.btn.btn-primary.btn-xs(
                href=shareit.vk
                target='_blank'
                title='VKontakte'
                aria-label='VKontakte'
              ): .fa.fa-2x.fa-vk(aria-hidden='true')
              | &nbsp;

    ajax-loading-spinner(ajax-loading-var='{{ajaxLoadingSpinner}}')
