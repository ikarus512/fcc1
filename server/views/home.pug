extend ./common/layout.pug

block vars
  - var title = 'Home';
  - var background = 'background-color: #444; background-image: url(/img/pixabay_com_crowd.png);';

block scriptBeforeBody
  script(src='/js/common/removeFacebookAppendedHash.js')


block content
  .row
    .well
      h1 Dynamic Web Application Projects
      p
        | Here are several applications according to FreeCodeCamp.com
        | tasks, within one Heroku application.

  .row
    .col-sm-6.col-md-4: .thumbnail: .caption: .myhome-thumbnail
      h3 Voting App
      p Accessible via 'Voting' menu or 'Go' button below.
      p Following user stories:
        a(href='https://freecodecamp.com/challenges/basejump-build-a-voting-app'
          target='_blank'
        )  fcc user stories.
      p: a.btn.btn-primary(href="/app1") Go

    .col-sm-6.col-md-4: .thumbnail: .caption: .myhome-thumbnail
      h3 Nightlife Coordination App
      p Accessible via 'Nightlife' menu or 'Go' button below.
      p Following user stories:
        a(href='https://www.freecodecamp.com/challenges/build-a-nightlife-coordination-app'
          target='_blank'
        )  fcc user stories
      p: a.btn.btn-primary(href="/app2") Go

    .col-sm-6.col-md-4: .thumbnail: .caption: .myhome-thumbnail
      h3 Chart the Stock Market
      p Accessible via 'Stock' menu or 'Go' button below.
      p Following user stories:
        a(href='https://www.freecodecamp.com/challenges/chart-the-stock-market'
          target='_blank'
        )  fcc user stories
      p: a.btn.btn-primary(href="/app3") Go

    .col-sm-6.col-md-4: .thumbnail: .caption: .myhome-thumbnail
      h3 Book Trading Club
      p Accessible via 'Books' menu or 'Go' button below.
      p Following user stories:
        a(href='https://www.freecodecamp.com/challenges/manage-a-book-trading-club'
          target='_blank'
        )  fcc user stories
      p: a.btn.btn-primary(href="/app4") Go

    .col-sm-6.col-md-4: .thumbnail: .caption: .myhome-thumbnail
      h3 Pinterest Clone
      p Accessible via 'Pinter' menu or 'Go' button below.
      p Following user stories:
        a(href='https://www.freecodecamp.com/challenges/build-a-pinterest-clone'
          target='_blank'
        )  fcc user stories
      p: a.btn.btn-primary(href="/app5") Go

  .row
    //- ----------------------------------------------------
    //- --  share buttons
    //- ----------------------------------------------------
    if(shareit_facebook||shareit_twitter||shareit_odnoklassniki||shareit_vk)
      .well
        label Share with:
        | &nbsp;
        if(shareit_facebook)
          a.btn.btn-primary.btn-xs(
            href=shareit_facebook
            target='_blank'
            title='Facebook'
            aria-label='Facebook'
          ): .fa.fa-2x.fa-facebook(aria-hidden='true')
          | 
        if(shareit_twitter)
          a.btn.btn-primary.btn-xs(
            href=shareit_twitter
            target='_blank'
            title='Twitter'
            aria-label='Twitter'
          ): .fa.fa-2x.fa-twitter(aria-hidden='true')
          | 
        if(shareit_odnoklassniki)
          a.btn.btn-primary.btn-xs(
            href=shareit_odnoklassniki
            target='_blank'
            title='Odnoklassniki'
            aria-label='Odnoklassniki'
          ): .fa.fa-2x.fa-odnoklassniki(aria-hidden='true')
          | 
        if(shareit_vk)
          a.btn.btn-primary.btn-xs(
            href=shareit_vk
            target='_blank'
            title='VKontakte'
            aria-label='VKontakte'
          ): .fa.fa-2x.fa-vk(aria-hidden='true')
          | 
