extend ./common/layout.pug

block vars
  - var title = 'Settings';
  - var background = 'background-color: #444; background-image: url(/img/pixabay_com_crowd.png);';

block content

  .row
    .col-sm-8
      .panel.panel-default
        .panel-heading
          h2 User Settings:
        .panel-body
          .form-horizontal
            .form-group
              label.col-sm-4.control-label Login Type:
              .col-sm-8
                input.form-control(type='text' readonly disabled value=logintype)

            .form-group
              label.col-sm-4.control-label(for='loginUsername') User Name:
              .col-sm-8
                input.form-control(type='text' readonly disabled value=username)
